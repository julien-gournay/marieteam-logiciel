<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="mainContainer" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.marieteamclient.HelpController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Centre d'aide" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <VBox spacing="15" alignment="CENTER" maxWidth="600">
        <Label text="Guide d'utilisation" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="1. Gestion des bateaux" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label text="• Pour voir la liste des bateaux, cliquez sur 'Bateaux > Liste des bateaux'" 
                   style="-fx-font-size: 14px;" wrapText="true"/>
            <Label text="• Dans la liste des bateaux, vous pouvez :" 
                   style="-fx-font-size: 14px;" wrapText="true"/>
            <Label text="  - Rechercher un bateau par son nom" 
                   style="-fx-font-size: 14px;" wrapText="true"/>
            <Label text="  - Ajouter des équipements à un bateau" 
                   style="-fx-font-size: 14px;" wrapText="true"/>
            <Label text="  - Supprimer des équipements d'un bateau" 
                   style="-fx-font-size: 14px;" wrapText="true"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="2. Gestion des équipements" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label text="• Pour gérer les équipements, utilisez le menu 'Équipements' :" 
                   style="-fx-font-size: 14px;" wrapText="true"/>
            <Label text="  - Ajouter un nouvel équipement" 
                   style="-fx-font-size: 14px;" wrapText="true"/>
            <Label text="  - Modifier un équipement existant" 
                   style="-fx-font-size: 14px;" wrapText="true"/>
            <Label text="  - Supprimer un équipement" 
                   style="-fx-font-size: 14px;" wrapText="true"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="3. Génération de PDF" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label text="• Pour générer un PDF, cliquez sur 'Fichier > Générer un PDF'" 
                   style="-fx-font-size: 14px;" wrapText="true"/>
            <Label text="• Choisissez l'emplacement où enregistrer le fichier" 
                   style="-fx-font-size: 14px;" wrapText="true"/>
        </VBox>
    </VBox>

    <Button text="Retour à l'accueil" onAction="#handleBackButtonClick" 
            styleClass="button-primary" prefWidth="150"/>
</VBox> 